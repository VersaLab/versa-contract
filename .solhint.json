{
    "extends": [
        "solhint:recommended"
    ],
    "rules": {
        "prettier/prettier": "error",
        "avoid-suicide": "error",
        "avoid-sha3": "warn",
        "func-visibility": [
            "warn",
            {
                "ignoreConstructors": true
            }
        ],
        "avoid-throw": "off",
        "no-empty-blocks": "off",
        "no-global-import": "off",
        "no-inline-assembly": "off",
        "not-rely-on-time": "off",
        "private-vars-leading-underscore": "off",
        "reason-string": "off",
        "state-visibility": "off",
        "var-name-mixedcase": "off",
        "compiler-version": [
            "off"
        ]
    },
    "plugins": [
        "prettier"
    ]
}